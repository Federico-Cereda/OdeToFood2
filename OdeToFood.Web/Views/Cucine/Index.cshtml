@model IEnumerable<OdeToFood.Data.Models.Cucina>

@{
    ViewBag.Title = "Index";
}

<h2>Tipi di Cucina</h2>

<p>
    @Html.ActionLink("Nuovo Tipo di Cucina", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <li>@Html.DisplayFor(modelItem => item.Tipo)</li>
        </td>
        <td>
            @Html.ActionLink("Elimina", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
